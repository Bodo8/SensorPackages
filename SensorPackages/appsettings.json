{
  "AppSettings": {
    "Name": "name"
  },
    
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "logger_${date:format=yyyy-MM-dd}.log"
      },
      "logconsole": {
        "type": "Console",
        "layout": "${longdate} [${level:uppercase=true}] ${message}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfile"
      }
    ]
  }
}